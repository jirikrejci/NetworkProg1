<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".UI.actSocketExample">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:id="@+id/tvNetworkOutput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="PressButton"
        />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnRunSocketExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Run Socket Exampl"
            android:onClick="btnRunSocketExample_onClick"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btnToastTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Toast Test"
            android:onClick="btnToastTest_onClick"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnRunURLExample"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Run URL Example with Callback"
                android:onClick="btnRunURLExample_onClick"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btnClearDisplay"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Clr"
                android:onClick="btnClearDisplay_onClick"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btnShowURLExampleOutput"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Show URL Example Output"
                android:onClick="btnShowURLExampleOutput_onClick"
                android:layout_weight="1"
                />



    </LinearLayout>

</LinearLayout>
